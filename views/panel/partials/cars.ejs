<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="/css/style/panel.css" />
    <link rel="stylesheet" href="/css/style/general.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <title>VehiGo | Administracija</title>
  </head>
  <body>
    <main class="admin--panel">
      <%- include('../aside/aside.ejs') %>
      <article class="content--admin">
        <main class="admin--sections">
          <section class="admin--section active--section section--automobili">
            <h1 class="section--heading">Unesite novi automobil</h1>
            <form class="form--admin--cars" id="addCarsForm" action="/panel">
              <input
                type="text"
                name="car_license_number"
                onkeypress="allowOnlyNumbersAndBigLetters(event)"
                placeholder="Registracija"
                class="form--input--admin"
              />
              <select class="form--input--admin" id="car_brand">
                <option value="Tip auta">Marka auta</option>
                <option value="Mercedes">Mercedes</option>
                <option value="BMW">BMW</option>
                <option value="Volkswagen">Volkswagen</option>
              </select>
              <input
                type="text"
                name="car_model"
                placeholder="Model auta"
                class="form--input--admin"
              />
              <select class="form--input--admin" id="car_type">
                <option value="Tip auta">Tip auta</option>
                <option value="Kupe">Kupe</option>
                <option value="Kabriolet">Kabriolet</option>
                <option value="Kombi">Kombi</option>
                <option value="Sedan">Sedan</option>
                <option value="Limuzina">Limuzina</option>
                <option value="Karavan">Karavan</option>
                <option value="Hatchback">Hatchback</option>
                <option value="SUV">SUV</option>
              </select>
              <input
                type="text"
                onkeypress="allowOnlyNumbers(event)"
                name="car_kilometers"
                placeholder="Prijeđeni kilometri"
                class="form--input--admin"
              />
              <input
                type="text"
                onkeypress="allowOnlyNumbers(event)"
                name="car_max_speed"
                placeholder="Maksimalna brzina"
                class="form--input--admin"
              />
              <input
                type="text"
                placeholder="Potrošnja (100 km/l)"
                name="car_fuel_consumption"
                onkeypress="allowOnlyNumbers(event)"
                class="form--input--admin"
              />
              <select class="form--input--admin" id="car_seats">
                <option value="Broj sjedala">Broj sjedala</option>
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
              </select>
              <select class="form--input--admin" id="car_fuel_type">
                <option value="Tip benzina">Tip benzina</option>
                <option value="Benzin">Benzin</option>
                <option value="Dizel">Dizel</option>
                <option value="Hibrid">Hibrid</option>
                <option value="Plin">Plin</option>
              </select>
              <input
                type="text"
                placeholder="Broj konja"
                name="car_horse_power"
                onkeypress="allowOnlyNumbers(event)"
                class="form--input--admin"
              />
              <input
                type="text"
                placeholder="Godina"
                name="car_year"
                onkeypress="allowOnlyNumbers(event)"
                class="form--input--admin"
              />
              <input
                type="text"
                name="car_price"
                placeholder="Cijena (dan/€)"
                onkeypress="allowOnlyNumbers(event)"
                class="form--input--admin"
              />
              <input
                type="text"
                name="car_url"
                placeholder="Ime slike"
                class="form--input--admin form--url--input"
              />

              <button class="form--submit--admin">Potvrdi unos</button>
            </form>

            <form
              class="form--admin--upload--image"
              action="/upload"
              method="POST"
              enctype="multipart/form-data"
            >
              <label class="upload--image">
                <p class="upload--text">Prenesite željenu sliku</p>
                <ion-icon
                  name="cloud-upload-outline"
                  class="upload--icon"
                ></ion-icon>
                <input type="file" name="image" class="input--image" />
              </label>
              <input type="submit" class="submit--image" />
            </form>
            <div class="car--error"></div>
          </section>
        </main>
      </article>
    </main>
    <script src="/js/panel.js"></script>
    <script src="/js/addCarsFormHandler.js"></script>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
